            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SmartRefListViewActivity"
            android:exported="true" />
        <activity
            android:name=".activity.WeiboPracticeActivity"
            android:exported="true" />
        <activity
            android:name=".activity.SmartRefRecyclerDiyAdapterActivity"
            android:exported="true" />
        <activity
            android:name=".activity.SmartRefRecyclerViewActivity"
            android:exported="true" />
        <activity
