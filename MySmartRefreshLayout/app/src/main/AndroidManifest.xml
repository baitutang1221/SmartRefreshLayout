    <uses-sdk tools:overrideLibrary="com.github.czy1121.loadinglayout" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
